@model totalsmarthomes.Models.ViewModels.Shared.FooterViewModel

@* Renders the Logo within the footer.*@

@{
    var classname = Model.GenericProperties.FooterCallToAction ? "" : "cta-padding";
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="text-center">
                @if (Model.Site.SiteMonochromeLogo != null && Model.Site.SiteMonochromeLogo.Url != null)
                {
                    <div class="center-block @classname">
                        <a href="/"><img src="@Model.Site.SiteMonochromeLogo.Url" class="img-responsive" itemprop="logo" alt="logo" /></a>
                    </div>
                }
            </div>
        </div>
    </div>
}

