@model StoreFront.Model.ViewModel.Shared.FooterViewModel
@* Renders the CTA banner within the footer.*@

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="text-center">
            @if (Model.GenericProperties.FooterCallToAction)
            {
                if (!String.IsNullOrEmpty(Model.FooterCtaButton.CtaButtonText))
                {
                    <a href="@Model.FooterCtaButton.Url" title="@Model.FooterCtaButton.Name" class="btn btn-cta" role="button">
                        @Model.FooterCtaButton.CtaButtonText
                        <span class="glyphicon glyphicon-play" aria-hidden="true"></span>
                    </a>
                }
            }
        </div>
    </div>
</div>

