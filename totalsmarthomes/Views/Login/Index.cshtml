@model StoreFront.Model.ViewModel.Login.LoginPageViewModel

@{
    Layout = "../Shared/_PageMaster.cshtml";

}
<h2 class="title">Login or Register</h2>

@using (Html.BeginForm("Login", "Login", new { ReturnUrl = Context.Request.Query["ReturnUrl"] }, FormMethod.Post))
{

    <div class="row">
        <div class="col-lg-6">

            <div class="row form-row">
                <label class="control-label registrationLabel col-lg-4 col-sm-3 col-xs-12 pull-left" for="Firstname">Email</label>



                @Html.TextBoxFor(c => c.Email,
                                                            new
                                                            {
                                                                @class = "registration-form-control  input-lg primary-input required col-xs-12 col-sm-10 col-md-10 col-lg-7 registration-textfield pull-left",
                                                                placeholder = "Email",
                                                                maxlength = 50,
                                                                title = "Please enter your email",
                                                                data_toggle = "tooltip"
                                                            })

                @Html.ValidationMessageFor(c => c.Email, "Please enter your username",
                                                                                       new
                                                                                       {
                                                                                           @class = "error col-xs-12 col-sm-12 col-md-12 col-lg-12"
                                                                                       })




            </div>
            <div class="row form-row">
                <label class="control-label registrationLabel col-lg-4 col-sm-3 col-xs-12 pull-left" for="Firstname">Password</label>



                @Html.PasswordFor(c => c.Password,
                              new
                              {
                                  @class = "registration-form-control  input-lg primary-input required col-xs-12 col-sm-10 col-md-10 col-lg-7 registration-textfield pull-left",
                                  placeholder = "Password",
                                  maxlength = 50,
                                  title = "Please enter your password",
                                  data_toggle = "tooltip"
                              })

                @Html.ValidationMessageFor(c => c.Password, "Please enter your password",
                              new
                              {
                                  @class = "error col-xs-12 col-sm-12 col-md-12 col-lg-12"
                              })

            </div>
                <div class="row">
                    <div class="col-lg-12">

                        <div class="col-lg-7 offset-lg-4">
                            <a asp-controller="PasswordReset" asp-action="Index">
                                Forgotten Password
                            </a>
                        </div>
                    </div>
                </div>

            <div class="row form-row">
                <div class="col-lg-11">
                    <button type="submit" class="btn btn-secondary registration login-submit pull-right">
                        Log in
                        <span class="glyphicon glyphicon-chevron-right"></span>
                    </button>
                </div>
            </div>


        </div>
        <div class="col-lg-6 registerblock">
            <div class="row form-row">
                <div class="col-lg-11">
                    If You do not already have an account please click below to get started.
                    <br /><br />
                    <a asp-controller="Register" asp-action="Index" class="btn btn-secondary registration login-submit pull-right">
                        Register
                        <span class="glyphicon glyphicon-chevron-right"></span>
                    </a>
                </div>
            </div>
            </div>
    </div>

}